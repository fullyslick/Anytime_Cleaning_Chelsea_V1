<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.ar.anytimecleaning.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/starslandscape">
        <LinearLayout
            android:id="@+id/logoHolder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/maidlogo"
                android:scaleType="fitCenter" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#990D152D">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anytime Cleaning"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#ffdd03"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:shadowColor="#000"
                android:shadowRadius="20"
                android:shadowDx="0"
                android:shadowDy="0"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="020 3026 2307"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center"
                android:shadowColor="#000"
                android:shadowRadius="20"
                android:shadowDx="0"
                android:shadowDy="0"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#fff">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"  >
                <ImageView
                    android:id="@+id/pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pin"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:maxHeight="25dp"
                    android:maxWidth="25dp"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addres"
                    android:autoLink="web"
                    android:textColorLink="#0D152D"
                    android:textSize="20sp"
                    android:textColor="#0D152D"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@id/pin"/>
                <ImageView
                    android:id="@+id/mailIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mail"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:maxHeight="25dp"
                    android:maxWidth="25dp"
                    android:layout_below="@id/address"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="office@anytimecleaning.com"
                    android:layout_toRightOf="@id/mailIcon"
                    android:layout_below="@id/address"
                    android:textColor="#0D152D"
                    android:textSize="20sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="12dp"/>
                <ImageView
                    android:id="@+id/urlIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/urlicon"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:maxHeight="25dp"
                    android:maxWidth="25dp"
                    android:layout_below="@id/email"/>
                <TextView
                    android:id="@+id/website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/homepage"
                    android:textColorLink="#0D152D"
                    android:autoLink="web"
                    android:textColor="#0D152D"
                    android:textSize="20sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="12dp"
                    android:layout_below="@id/email"
                    android:layout_toRightOf="@id/urlIcon"/>
                <ImageView
                    android:id="@+id/clockIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:maxHeight="25dp"
                    android:maxWidth="25dp"
                    android:layout_below="@id/website"/>
                <TextView
                    android:id="@+id/hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hours"
                    android:textColor="#0D152D"
                    android:textSize="20sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="12dp"
                    android:layout_below="@id/website"
                    android:layout_toRightOf="@id/clockIcon"/>
                <TextView
                    android:id="@+id/aboutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Us:"
                    android:textColor="#0D152D"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_below="@id/hours"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_below="@id/aboutTitle"
                    android:text="@string/description"/>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
